<Window x:Class="DXC_Net_homework_student.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXC_Net_homework_student"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="10" ShowGridLines="True" Background="#F5F5DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <TextBlock Grid.Row="0" Text="学生成绩管理系统" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- 检索条件区域 -->
        <GroupBox Grid.Row="1" Header="检索条件" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="190"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行检索条件 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="学生ID" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtStudentId" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="姓名" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtName" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="5">
                    <TextBlock Text="住址" Margin="0,0,0,2"/>
                    <TextBox x:Name="txtAddress" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Margin="5">
                    <TextBlock Text="科目" Margin="0,0,0,2"/>
                    <ComboBox x:Name="cmbSubject" Height="25">
                        <ComboBoxItem Content="(空白)"/>
                        <ComboBoxItem Content="语文"/>
                        <ComboBoxItem Content="数学"/>
                        <ComboBoxItem Content="英语"/>
                        <ComboBoxItem Content="总分"/>
                    </ComboBox>
                </StackPanel>

                <!-- 第二行检索条件 - 分数范围 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                           Orientation="Horizontal" Margin="5">
                    <TextBlock Text="分数范围:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtMinScore" Width="60" Height="25" 
                            ToolTip="最小分数"/>
                    <TextBlock Text="~" VerticalAlignment="Center" Margin="5,0,5,0"/>
                    <TextBox x:Name="txtMaxScore" Width="60" Height="25" 
                            ToolTip="最大分数"/>
                </StackPanel>

                <!-- 刷新按钮 -->
                <Button Grid.Row="1" Grid.Column="4" 
                        Content="刷新" Width="80" Height="30"
                        Margin="15,5,5,5" HorizontalAlignment="Left" Command="{Binding RefreshCommand}"/>

                <!-- 检索按钮 -->
                <Button Grid.Row="1" Grid.Column="4" 
                        Content="检索" Width="80" Height="30"
                        Margin="5" HorizontalAlignment="Right" Command="{Binding SearchCommand}"/>
            </Grid>
        </GroupBox>

        <!-- 数据一览区域 -->
        <GroupBox Grid.Row="2" Header="学生一览" Margin="0,0,0,10">
            <Grid>
                <DataGrid x:Name="dgStudents" AutoGenerateColumns="False" 
                         CanUserAddRows="False" CanUserDeleteRows="False"
                         SelectionMode="Single" IsReadOnly="False" ItemsSource="{Binding StudentList}"
                         SelectedItem="{Binding SelectedStudent}">
                    <DataGrid.Columns>
                        <!-- 选择列 -->
                        <DataGridTemplateColumn Width="30">
                            <DataGridTemplateColumn.Header>
                                <CheckBox x:Name="chkSelectAll" IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=DataGrid}}" Command="{Binding DataContext.SelectAllCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected}" Checked="StudentCheckBox_Checked" Unchecked="StudentCheckBox_Unchecked"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- 数据列 -->
                        <DataGridTextColumn Header="学生ID" Binding="{Binding Id}" 
                                           Width="70"/>
                        <DataGridTextColumn Header="姓名" Binding="{Binding Name}" 
                                           Width="80"/>
                        <DataGridTextColumn Header="性别" Binding="{Binding Sex}" 
                                           Width="50"/>
                        <DataGridTextColumn Header="出生年月" Binding="{Binding Birthday}" 
                                           Width="90"/>
                        <DataGridTextColumn Header="电话" Binding="{Binding Phone}" 
                                           Width="100"/>
                        <DataGridTextColumn Header="住址" Binding="{Binding Address}" 
                                           Width="150"/>

                        <!-- 成绩列 -->
                        <DataGridTextColumn Header="语文" Binding="{Binding ScoreYW}" 
                                           Width="60"/>
                        <DataGridTextColumn Header="数学" Binding="{Binding ScoreSX}" 
                                           Width="60"/>
                        <DataGridTextColumn Header="英语" Binding="{Binding ScoreYY}" 
                                           Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAdd" Content="新增" Width="80" Height="30" Margin="5" Command="{Binding AddStuCommand}"/>
            <Button x:Name="btnEdit" Content="修改" Width="80" Height="30" Margin="5" Command="{Binding UpdateStuCommand}" />
            <Button x:Name="btnDelete" Content="删除" Width="80" Height="30" Margin="5" Command="{Binding DeleteStuCommand}"/>
            <Button x:Name="btnExport" Content="导出Excel" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>

</Window>
