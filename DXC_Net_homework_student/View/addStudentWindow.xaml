<Window x:Class="DXC_Net_homework_student.addStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXC_Net_homework_student"
        mc:Ignorable="d"
        Title="新增学生信息"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="#FF6B8E23"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF6B8E23"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF8FBC8F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF556B2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5DC" Margin="10">
        <!-- 标题 -->

        <!-- 表单区域 -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Label Content="学生信息录入" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#6B8E23"/>
        </StackPanel>

        <!-- 表单区域 -->
        <Grid Margin="5,60,80,80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 姓名 -->
            <Label Grid.Row="0" Grid.Column="0" Content="姓名:" Target="{Binding ElementName=txtName}"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName" ToolTip="请输入学生姓名" Text="{Binding Name}" />

            <!-- 性别 -->
            <Label Grid.Row="1" Grid.Column="0" Content="性别:" Target="{Binding ElementName=cmbSex}"/>
            <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbSex" ToolTip="请选择性别" 
                      SelectedValuePath="Content" SelectedValue="{Binding Sex}">
                <ComboBoxItem Content="男"/>
                <ComboBoxItem Content="女"/>
            </ComboBox>

            <!-- 出生年月 -->
            <Label Grid.Row="2" Grid.Column="0" Content="出生年月:" Target="{Binding ElementName=txtBirthday}"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtBirthday" ToolTip="格式如：2000-01-01" Text="{Binding Birthday}"/>

            <!-- 手机号 -->
            <Label Grid.Row="3" Grid.Column="0" Content="手机号:" Target="{Binding ElementName=txtPhone}"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtPhone" ToolTip="请输入手机号码" Text="{Binding Phone}"/>

            <!-- 住址 -->
            <Label Grid.Row="4" Grid.Column="0" Content="住址:" Target="{Binding ElementName=txtAddress}"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtAddress" Height="60" AcceptsReturn="True" TextWrapping="Wrap" ToolTip="请输入住址信息" Text="{Binding Address}"/>

            <!-- 语文分数 -->
            <Label Grid.Row="5" Grid.Column="0" Content="语文分数:" Target="{Binding ElementName=txtScoreYW}"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtScoreYW" ToolTip="请输入语文分数" Text="{Binding ScoreYW}"/>

            <!-- 数学分数 -->
            <Label Grid.Row="6" Grid.Column="0" Content="数学分数:" Target="{Binding ElementName=txtScoreSX}"/>
            <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtScoreSX" ToolTip="请输入数学分数" Text="{Binding ScoreSX}"/>

            <!-- 英语分数 -->
            <Label Grid.Row="7" Grid.Column="0" Content="英语分数:" Target="{Binding ElementName=txtScoreYY}"/>
            <TextBox Grid.Row="7" Grid.Column="1" x:Name="txtScoreYY" ToolTip="请输入英语分数" Text="{Binding ScoreYY}" />
        </Grid>

        <!-- 按钮区域 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="btnConfirm" Content="确定" Command="{Binding SaveCommand}" />
            <Button x:Name="btnCancel" Content="取消" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
