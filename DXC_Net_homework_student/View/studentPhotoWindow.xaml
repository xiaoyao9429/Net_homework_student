<Window x:Class="DXC_Net_homework_student.StudentPhotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXC_Net_homework_student"
        mc:Ignorable="d"
        Title="学生照片展示"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterOwner">
    <!-- 资源定义 -->
    <Window.Resources>
        <!-- 照片路径转换器 -->
        <local:PhotoPathConverter x:Key="PhotoPathConverter"/>
        <!-- 阴影效果 -->
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="5" Opacity="0.3" Direction="270"/>
    </Window.Resources>

    <Grid Margin="10" Background="#FFE8F5FF">
        <!-- 标题 -->
        <TextBlock Text="学生照片展示" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>
        
        <!-- 滚动查看器 -->
        <ScrollViewer Margin="0,50,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- 照片网格展示区域 -->
            <ItemsControl x:Name="studentsItemsControl" HorizontalAlignment="Stretch">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- 使用WrapPanel进行自动换行布局，并绑定宽度到ScrollViewer -->
                        <WrapPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   ItemWidth="180" 
                                   ItemHeight="220"
                                   Margin="0,0,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Padding="5" Margin="10" Background="White" Effect="{StaticResource DropShadowEffect}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- 照片容器 -->
                                <Border Width="150" Height="150" Background="#FFF0F0F0" CornerRadius="5">
                                    <Image Source="{Binding PhotoPath, Converter={StaticResource PhotoPathConverter}}" 
                                           Stretch="Uniform" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                                </Border>
                                <!-- 学生姓名 -->
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,10,0,0" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>